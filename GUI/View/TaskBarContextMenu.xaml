<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ContextMenu x:Key="TaskBarContextMenu" VerticalAlignment="Center">
        <MenuItem Header="Показать SMB Monitor" Command="{Binding ShowMainWindow}">
            <MenuItem.Icon>
                <Image Width="20" Height="20" Source="{DynamicResource Monitor}"/>
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="Настройки" Command="{Binding ShowSettingsWindow}">
            <MenuItem.Icon>
                <Image Width="20" Height="20" Source="{DynamicResource Settings}"/>
            </MenuItem.Icon>
        </MenuItem>
        <Separator/>
        <MenuItem Header="О программе" Command="{Binding ShowAboutWindow}">
            <MenuItem.Icon>
                <Image Width="20" Height="20" Source="{DynamicResource Info}"/>
            </MenuItem.Icon>
        </MenuItem>
        <Separator/>
        <MenuItem Header="Выход" Command="{Binding ExitApplication}">
            <MenuItem.Icon>
                <Image Width="20" Height="20" Source="{DynamicResource Shutdown}"/>
            </MenuItem.Icon>
        </MenuItem>
    </ContextMenu>
</ResourceDictionary>