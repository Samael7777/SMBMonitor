<UserControl x:Class="SMBMonitor.View.MonitorListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">

    <Label Background="{Binding MonitorStatusColor}" Height="60" BorderThickness="2" BorderBrush="Black" Margin="0,1,0,1" HorizontalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Image Source="{Binding TypeImage, Mode=OneWay}"/>
            <Image Source="{Binding StateImage}" Margin="5,0,15,0"/>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Foreground="White" FontSize="14" Text="{Binding Title}"></TextBlock>
                <TextBlock Foreground="White" FontSize="12" Text="{Binding SharesConnectedString}"/>
            </StackPanel>
        </StackPanel>
    </Label>
</UserControl>
