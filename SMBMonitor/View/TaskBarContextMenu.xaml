<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">

    <ContextMenu x:Key="TaskBarContextMenu" VerticalAlignment="Center">
        <MenuItem Header="Показать SMB Monitor" Command="{Binding ShowMainWindow}">
            <MenuItem.Icon>
                <iconPacks:PackIconModern Kind="Monitor" Width="20" Height="20"/>
            </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="Настройки" Command="{Binding ShowSettingsWindow}">
            <MenuItem.Icon>
                <iconPacks:PackIconModern Kind="Settings" Width="20" Height="20"/>
            </MenuItem.Icon>
        </MenuItem>
        <Separator/>
        <MenuItem Header="О программе" Command="{Binding ShowAboutWindow}">
            <MenuItem.Icon>
                <iconPacks:PackIconModern Kind="Information" Width="20" Height="20"/>
            </MenuItem.Icon>
        </MenuItem>
        <Separator/>
        <MenuItem Header="Выход" Command="{Binding ExitApplication}">
            <MenuItem.Icon>
                <iconPacks:PackIconModern Kind="Power" Width="20" Height="20"/>
            </MenuItem.Icon>
        </MenuItem>
    </ContextMenu>
</ResourceDictionary>